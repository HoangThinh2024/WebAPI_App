{
  // Editor settings
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.rulers": [80, 120],
  "editor.wordWrap": "on",

  // Files
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/node_modules": true,
    "**/.git": true,
    "**/dist": true,
    "**/.vite": true,
    "**/.cache": true,
    "**/coverage": true
  },

  // Search
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/pnpm-lock.yaml": true,
    "**/.vite": true
  },

  // Vue specific
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // JavaScript/TypeScript
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // JSON
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Markdown
  "[markdown]": {
    "editor.defaultFormatter": "yzhang.markdown-all-in-one",
    "editor.wordWrap": "on"
  },

  // PowerShell
  "[powershell]": {
    "editor.tabSize": 4
  },

  // Python
  "[python]": {
    "editor.tabSize": 4
  },

  // ESLint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "vue"
  ],

  // Prettier
  "prettier.singleQuote": true,
  "prettier.semi": false,
  "prettier.trailingComma": "es5",

  // Git
  "git.autofetch": true,
  "git.confirmSync": false,

  // Terminal
  "terminal.integrated.defaultProfile.windows": "PowerShell",

  // Volar (Vue)
  "volar.takeOverMode": true,

  // Path Intellisense
  "path-intellisense.mappings": {
    "@": "${workspaceFolder}/web_vue/src"
  },

  // Color highlight
  "color-highlight.markerType": "dot-before",

  // Error Lens
  "errorLens.enabledDiagnosticLevels": [
    "warning",
    "error"
  ],

  // Spell checker
  "cSpell.words": [
    "webapi",
    "pnpm",
    "vite",
    "volar",
    "vuejs",
    "streamlit",
    "sanitizer",
    "dompurify"
  ]
}
